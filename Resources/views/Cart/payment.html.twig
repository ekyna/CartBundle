{% extends 'EkynaCartBundle::layout.html.twig' %}

{% block cart %}
    <form action="{{ path('ekyna_cart_payment') }}" method="post" class="form-horizontal" {{ form_enctype(form) }}>

        {{ bootstrap_set_style('horizontal') }}
        {{ bootstrap_set_col_size('md') }}
        {{ form_widget(form) }}

        <hr>

        <p style="text-align: center;">
            <button type="submit" name="submit" class="btn btn-lg btn-primary">
                {{ 'ekyna_core.button.validate'|trans }}
            </button>
        </p>

    </form>
{% endblock cart %}

{% block stylesheets -%}
    {{ parent() }}
    {% stylesheets output='css/payment.css' filter='cssrewrite, ?yui_css'
        '@EkynaPaymentBundle/Resources/asset/css/payment.css'
    %}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
    {% endstylesheets %}
{%- endblock stylesheets %}